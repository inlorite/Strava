<project name="springboot-client-resttemplate" default="2.client" basedir=".">
	<property name="source.dir" location="src"/>
   	<property name="build.dir" location="bin"/>
	<property name="lib.dir" location="lib"/>
	<property name="resources.dir" location="resources"/>
    <property name="main.class" value="es.deusto.ingenieria.sd.springboot.client.ClientApplication"/> 

	<path id="classpath">
        <fileset dir="${lib.dir}">
            <include name="**/*.jar"/>
        </fileset>
        <pathelement location="${build.dir}"/>    	
		<pathelement location="${resources.dir}"/>    	
    </path>

	<target name="1.build" description="Builds the project">
		<delete dir="${build.dir}"/>
		<mkdir dir="${build.dir}"/>
		<javac srcdir="${source.dir}" destdir="${build.dir}" classpathref="classpath" deprecation="true" fork="true" includeantruntime="no"/>
        <copy todir="${build.dir}">
            <fileset dir="${resources.dir}"/>
        </copy>
    </target>

	<target name="2.client" depends="1.build"  description="Runs Client program">
		<java classname="${main.class}" classpathref="classpath" fork="true"/>
    </target>
</project>
